# Stability AI MCP Server Configuration
# Copy this file to .env and update with your values

# Required: Your Stability AI API Key
STABILITY_API_KEY=your-stability-ai-api-key-here

# Server Configuration
PORT=8080
HOST=0.0.0.0
NODE_ENV=development

# MCP Server Configuration
MCP_SERVER_NAME=StabilityAI-MCP
MCP_SERVER_VERSION=1.0.0

# Monitoring Configuration
HEALTH_CHECK_PATH=/health
METRICS_PATH=/metrics

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=app.log

# Resource Limits
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# Stability AI Image Generation Defaults
# These provide sensible defaults - most parameters are optional in API calls
STABILITY_ENGINE=stable-diffusion-xl-1024-v1-0
STABILITY_WIDTH=1024
STABILITY_HEIGHT=1024
STABILITY_STEPS=30  # Balanced quality vs speed (was 50)
STABILITY_CFG_SCALE=7.0  # Good guidance strength
STABILITY_SAMPLER=k_dpm_2  # Modern sampler with excellent results

# SD3.5 Specific Defaults (automatically used with generate-image-sd35)
STABILITY_SD35_MODEL=sd3.5-medium
STABILITY_SD35_WIDTH=1024
STABILITY_SD35_HEIGHT=1024
STABILITY_SD35_STEPS=20  # SD3.5 is faster and needs fewer steps
STABILITY_SD35_CFG_SCALE=5.0  # Lower CFG works better with SD3.5
STABILITY_SD35_SAMPLER=k_dpm_2

# Metadata Options
SAVE_METADATA=TRUE
SAVE_METADATA_FAILED=FALSE

# Quick Reference - Recommended Settings:
# --------------------------------------------------
# Quick generations: STABILITY_STEPS=20, STABILITY_CFG_SCALE=5.0
# High quality: STABILITY_STEPS=50, STABILITY_CFG_SCALE=7.0  
# SD3.5 Turbo: Use generate-image-sd35 with STABILITY_SD35_STEPS=10
#
# Available Samplers: k_lms, k_dpm_2, k_dpm_2_ancestral, k_euler, k_euler_ancestral
# Recommended: k_dpm_2 (balanced), k_euler (creative), k_dpm_2_ancestral (detailed)
#
# Note: All generation parameters are optional in API calls - the server will use
# these environment defaults when parameters are not specified.